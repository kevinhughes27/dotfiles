# colors
theme = "OneHalfDark"
foreground = "#abb2bf"

# font
font-family = "Hack Nerd Font Mono"
font-size = 10

# disable copy notifications
# https://github.com/ghostty-org/ghostty/pull/4185
# https://github.com/ghostty-org/ghostty/pull/5332
app-notifications = no-clipboard-copy

# fix macos shell cursor
shell-integration-features = no-cursor

# fix alt bindings
macos-option-as-alt = true
# https://github.com/ghostty-org/ghostty/discussions/3681
keybind = alt+left=unbind
keybind = alt+right=unbind

# cmd shift click to open links
# https://github.com/ghostty-org/ghostty/issues/1040#issuecomment-2132414329

# keybindings
keybind = ctrl+v=paste_from_clipboard
keybind = alt+t=new_tab

keybind = f11=toggle_fullscreen

# toggle gtk bar which takes up valuable space
# use case is split screen with a browser
keybind = f12=toggle_window_decorations

copy-on-select = true

# local overrides
# mac fonts need to be bigger
config-file = ?../../.ghostty
