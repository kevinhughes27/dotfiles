[commit]
gpgsign = true

[gpg]
program = gpg

[core]
excludesfile = ~/.gitignore

[push]
default = current
followTags = true

[pull]
rebase = true

[merge]
ff = only
conflictstyle = diff3

[status]
showUntrackedFiles = all

[help]
autocorrect = 1

[alias]
ci = commit
cia = commit --amend --reuse-message=HEAD
co = checkout
br = branch
l = log

# less typing to set upstream
set-upstream = !git branch --set-upstream-to=origin/`git symbolic-ref --short HEAD`

# word diff, effectively ignore whitespace
wdiff = diff -w --word-diff=color

# e.g. `git whatadded src/some/file`
whatadded = log --diff-filter=A
whattouched = log --diff-filter=M

[color]
branch = auto
diff = auto
status = auto
ui = true

[color "branch"]
current = yellow reverse
local = yellow
remote = green

[color "diff"]
meta = yellow bold
frag = magenta bold
old = red
new = cyan

[color "status"]
added = yellow
changed = green
untracked = cyan

[pager]
branch = false
